    +person('Marcus', 'http://hunor.online/codepen/tinderSwipe/guy1.jpg', 28, 0, 1)
    +person('Maria', 'http://hunor.online/codepen/tinderSwipe/girl2.jpg', 32, 2, 0)
    +person('John', 'http://hunor.online/codepen/tinderSwipe/guy2.jpg', 26, 1, 3)
