mixin person(name, photo, age, friends, interest)
  .box
    .boxcontent
      img(src=photo alt='Profile picture')
      .like Like
      .nope Nope
      .info
        .name= name + ', ' + age
        if friends !== 0
          .friends= friends + ' Mutual Friend'
        if interest !== 0
          .interest= interest + ' Common Interest'
          
#wrapper
  #container
    .background
      svg(
        xmlns="http://www.w3.org/2000/svg" version="1.1"
        width="100%" height="100%" viewBox="0 0 350 500")
        circle(cx=175 cy=250 r=120)
      .label Made by Hunor
